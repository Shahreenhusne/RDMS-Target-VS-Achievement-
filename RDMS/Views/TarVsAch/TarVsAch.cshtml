@{
    ViewBag.Title = "TargetVsAchievement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box">
        <div class="box-body">
            <form id="frmvalidation">
                <input type="hidden" id="hdnUserId" value=@Request.RequestContext.HttpContext.Session["UserID"]>
                <div class="row">
                    <div class="col-sm-4">
                       <button type="button" class="btn btn-primary pull-left btn-sm " id="btnPreview" name="btnPreview">Preview</button>
                    </div>
                    <div class="col-sm-2 pull-right">
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="datePicker" disabled>
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-4" style="padding-top: 8px">
                        <label id="btnCompanyName" style="color: blue; cursor: pointer; text-decoration: underline ">Company Name:</label>
                        <select id="cmbCompanyName" class="form-control input-sm" style="width:100%"></select>
                    </div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4" style="padding-top: 8px">
                        <label id="btnYear" style="color: blue; cursor: pointer; width: 100%; text-decoration: underline">Year:</label>
                        <select id="cmbYear" class="form-control input-sm" style="width:100%"></select> 
                    </div>
                </div>
              
                <div class="row" style="padding-top: 8px">
                    <div class="col-sm-4">
                        <label id="btnTargetType" style="color: blue; cursor: pointer; text-decoration: underline ">Target Type:</label>
                        <select name="ProviderList" id="cmbTargetType" class="form-control input-sm" placeholder="Target" style="width:100%" required></select>
                    </div>
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2" style="padding-right: 0px">
                        <label id="btnEmployee" style="color: blue; cursor: pointer; text-decoration: underline">Employee:</label>
                        <input class="form-control input-sm" type="text" id="txtEmployee" placeholder="Select All"/>
                    </div>
                    <div class="col-sm-2" style="padding-left: 0px; padding-top: 4.5px ">
                        <label></label>
                        <select class="form-control input-sm" name="Employee" id="cmbEmployee" placeholder="Employee" style="width:100%"></select>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

