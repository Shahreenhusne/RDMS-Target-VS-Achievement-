            </table>
        </div>
    </div>
</section>

<section class="content" id="tblAchDetailsFull" style="display: none">
    <div class="panel panel-violet">
        <div class="panel-heading panel-heading-custom " style="text-align: center ; font-size:large">
            Achievement Details
        </div>
        <!-- /.box-header -->
        <label id="lblId"></label>
